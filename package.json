{
  "name": "job-tracker",
  "version": "1.0.0",
  "description": "A desktop application for tracking job applications with automatic ingestion and local-first storage",
  "main": "dist/main/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "electron:dev": "cross-env NODE_ENV=development electron-vite dev",
    "electron:build": "electron-vite build && electron-builder",
    "start": "electron-vite dev"
  },
  "build": {
    "appId": "com.jobtracker.app",
    "productName": "Job Tracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@headlessui/react": "^2.2.4",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^4.36.1",
    "@tanstack/react-table": "^8.21.3",
    "better-sqlite3": "^9.0.0",
    "bufferutil": "^4.0.9",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "electron-store": "^8.1.0",
    "lucide-react": "^0.525.0",
    "node-cron": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.0",
    "react-router-dom": "^6.21.0",
    "tailwindcss": "^3.4.0",
    "utf-8-validate": "^6.0.5",
    "winston": "^3.11.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/node-cron": "^3.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
